<p id="notice"><%= notice %></p>

<h1>All Clinics</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Fax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.name %></td>
        <td><%= clinic.phone %></td>
        <td><%= clinic.fax %></td>
        <td><%= link_to fa_icon('eye', text: "view"), clinic %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_clinic_path(clinic) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus', text: "Add New Clinic"), new_clinic_path, class:"btn btn-warning"  %>
