<p id="notice"><%= notice %></p>

<h1>All Owners</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Emergency contact name</th>
      <th>Emergency contact phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.emergency_contact_name %></td>
        <td><%= owner.emergency_contact_phone %></td>
        <td><%= link_to fa_icon('eye', text: "view"), owner %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_owner_path(owner) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus', text: "Add New Owner"), new_owner_path, class:"btn btn-warning"  %>
