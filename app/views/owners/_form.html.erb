<div class="container">
<div class="row">
<div class="col-sm-2"></div>
<div class="col-sm-8 well">
<%= simple_form_for(@owner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone %>
    <%= f.input :emergency_contact_name %>
    <%= f.input :emergency_contact_phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-warning" %>
  <div>
  <br>
  <%= link_to fa_icon('arrow-left ', text: "back"), owners_path %> | <%= link_to fa_icon('eye', text: "view"),  @owner %>
  </div>
<% end %>
</div>
<div class="col-sm-2"></div>
</div>
</div>
</div>

