<p id="notice"><%= notice %></p>

<h1>All Dogs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="2">Dog</th>
      <th>D.O.B.</th>
      <th>Breed</th>
      <th>Medical Conditions</th>
      <th>In daycare</th>
      <th>Vet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= image_tag dog.avatar.url(:thumb) %></td>
        <td><%= dog.name %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.breed.name %></td>
        <td><%= dog.medical_conditions %></td>
        <td><%= dog.in_daycare %></td>
        <td><%= dog.vet.doctor %></td>
        <td><%= link_to fa_icon('eye', text: "view"), dog %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_dog_path(dog) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus', text: "Add New Dog"), new_dog_path, class:"btn btn-warning" %>
