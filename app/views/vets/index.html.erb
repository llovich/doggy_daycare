<p id="notice"><%= notice %></p>

<h1>All Vets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Clinic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= vet.doctor %></td>
        <td><%= vet.clinic.name %></td>
        <td><%= link_to fa_icon('eye', text: "view"), vet %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_vet_path(vet) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), vet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus', text: "Add New Vet"), new_vet_path, class:"btn btn-warning"  %>
